<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/LV_imageView"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"/>
    
    <TextView
        android:id="@+id/LV_textView_E"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/LV_imageView"
        android:layout_toRightOf="@id/LV_imageView"/>

    <TextView
        android:id="@+id/LV_textView_K"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/LV_textView_E"
        android:layout_toRightOf="@id/LV_imageView"/>

    <TextView
        android:id="@+id/LV_textView_C"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/LV_textView_K"
        android:layout_toRightOf="@id/LV_imageView"/>



</RelativeLayout>